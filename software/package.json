{
  "name": "@platforma-open/milaboratories.run-deseq2-r.software",
  "version": "2.2.0",
  "type": "module",
  "description": "Block Software: Run DESeq2 with R",
  "scripts": {
    "build": "pl-pkg build",
    "test": "true",
    "prepublishOnly": "pl-pkg prepublish"
  },
  "block-software": {
    "entrypoints": {
      "deseq2": {
        "binary": {
          "artifact": {
            "type": "R",
            "registry": "platforma-open",
            "environment": "@platforma-open/milaboratories.runenv-r-differential-expression:main",
            "root": "./src/deseq2"
          },
          "cmd": [
            "Rscript",
            "{pkg}/run_DESeq2.R"
          ]
        }
      },
      "prev-checks": {
        "binary": {
          "artifact": {
            "type": "python",
            "registry": "platforma-open",
            "environment": "@platforma-open/milaboratories.runenv-python-3:3.12.10",
            "dependencies": {
              "toolset": "pip",
              "requirements": "requirements.txt"
            },
            "root": "./src/prev-checks"
          },
          "cmd": [
            "python",
            "{pkg}/prevChecks.py"
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@platforma-open/milaboratories.runenv-r-differential-expression": "catalog:",
    "@platforma-sdk/package-builder": "catalog:",
    "@platforma-open/milaboratories.runenv-python-3": "catalog:"
  }
}